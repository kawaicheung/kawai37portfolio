<%
  # required
  # path: the path to the next page
  # optional
  # reversed: whether the button colors should be reversed
%>
<% reversed ||= false %>
<div data-controller="keyboard-nav" data-keyboard-nav-key-value="ArrowLeft" data-keyboard-nav-path-value="<%= path %>">
  <%= link_to path, class: "nav-btn #{reversed ? "reversed" : ""}" do %>
    <i class="fa fa-arrow-left"></i>
  <% end %>
</div>
